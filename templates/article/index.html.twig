{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 text-white flex flex-col">
    {% include 'partials/header.html.twig' %}

    <div class="container mx-auto px-6 pt-36 pb-16">
        <div class="flex items-center justify-between mb-10">
            <h1 class="text-3xl font-extrabold">ðŸ“° Tous les articles</h1>
            <a href="{{ path('app_article_new') }}"
               class="bg-violet-600 hover:bg-violet-700 text-white font-semibold py-2 px-4 rounded-md transition">
                + Nouvel article
            </a>
        </div>

        {% if articles is not empty %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for entry in articles %}
                    {% set article = entry.article %}
                    <div class="bg-gray-800 rounded-xl shadow-md hover:shadow-lg transition duration-300 flex flex-col justify-between overflow-hidden">
                        {% if entry.image %}
                            <img src="{{ entry.image }}" alt="Image de {{ article.artiste }}"
                                 class="w-full h-48 object-cover">
                        {% endif %}
                        <div class="p-6 flex flex-col justify-between flex-grow">
                            <div>
                                <h2 class="text-2xl font-bold mb-2 text-violet-400">{{ article.titre }}</h2>
                                <p class="text-sm text-gray-400 mb-4">
                                    PubliÃ© le {{ article.datePublication ? article.datePublication|date('d/m/Y Ã  H:i') : 'â€”' }}
                                </p>
                                <p class="text-gray-300 mb-4 line-clamp-3">{{ article.contenu|u.truncate(160, 'â€¦') }}</p>
                                <p class="text-sm text-gray-500 italic">Artiste : {{ article.artiste }}</p>
                            </div>
                            <div class="mt-6 flex justify-between items-center">
                                <a href="{{ path('app_article_show', {'id': article.id}) }}"
                                   class="text-sm text-violet-400 hover:text-violet-300 transition">Voir</a>
                                <a href="{{ path('app_article_edit', {'id': article.id}) }}"
                                   class="text-sm text-gray-400 hover:text-white transition">Modifier</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-400 mt-6 text-center">Aucun article pour le moment.</p>
        {% endif %}
    </div>

    {% include 'partials/footer.html.twig' %}
</div>
{% endblock %}