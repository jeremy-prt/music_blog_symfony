{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 text-white flex flex-col">
    {% include 'partials/header.html.twig' %}

    <div class="flex-grow flex items-center justify-center px-4">
        <div class="bg-gray-900 text-white rounded-2xl shadow-2xl w-full max-w-md p-8 space-y-6">

            <h2 class="text-3xl font-extrabold text-center text-white">Créer un compte</h2>

            {% for message in app.flashes('success') %}
                <div class="bg-green-600 text-white p-3 rounded mb-4 text-sm">{{ message }}</div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': { 'data-turbo': 'false'}}) }}

                <div class="mb-4">
                    <label class="block text-sm text-gray-400 mb-1">Email</label>
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'w-full px-4 py-2 rounded-lg border border-gray-600 bg-gray-800 placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-violet-500 duration-300',
                            'placeholder': 'votre@email.com'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-4">
                    <label class="block text-sm text-gray-400 mb-1">Pseudo</label>
                    {{ form_widget(registrationForm.pseudo, {
                        'attr': {
                            'class': 'w-full px-4 py-2 rounded-lg border border-gray-600 bg-gray-800 placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-violet-500 duration-300',
                            'placeholder': 'Choisissez un pseudo'
                        }
                    }) }}
                    {{ form_errors(registrationForm.pseudo) }}
                </div>

                <div class="mb-4">
                    <label class="block text-sm text-gray-400 mb-1">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'w-full px-4 py-2 rounded-lg border border-gray-600 bg-gray-800 placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-violet-500 duration-300',
                            'placeholder': '••••••••'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <button type="submit"
                        class="mt-2 cursor-pointer bg-violet-600 hover:bg-violet-700 text-white font-semibold py-3 w-full px-6 rounded-md duration-300">
                    S'inscrire
                </button>
            {{ form_end(registrationForm) }}

            <div class="flex items-center my-6">
                <hr class="flex-grow border-gray-700">
                <span class="mx-3 text-gray-500 text-sm">ou</span>
                <hr class="flex-grow border-gray-700">
            </div>

            <div class="flex justify-center space-x-6 text-white text-xl">
                <a href="{{ path('app_no_time', {'provider': 'google'}) }}" class="hover:text-gray-300"><i class="fab fa-google"></i></a>
                <a href="{{ path('app_no_time', {'provider': 'twitter'}) }}" class="hover:text-gray-300"><i class="fab fa-twitter"></i></a>
                <a href="{{ path('app_no_time', {'provider': 'github'}) }}" class="hover:text-gray-300"><i class="fab fa-github"></i></a>
            </div>

            <p class="text-center text-sm text-gray-400">Déjà un compte ?
                <a href="{{ path('app_login') }}" class="text-violet-400 hover:underline">Connexion</a>
            </p>
        </div>
    </div>

    {% include 'partials/footer.html.twig' %}
</div>
{% endblock %}